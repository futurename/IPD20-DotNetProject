<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="558" Width="1245.4">
    <Grid OpacityMask="#FF26262D" Background="White">
        <Label Content="Stock Market" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="50" Width="146" Background="White" Foreground="Black" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,51,0,0" TextWrapping="Wrap" Text="time..." VerticalAlignment="Top" Height="15" Width="102" Foreground="Black" Background="White"/>

        <TabControl HorizontalAlignment="Left" Height="498" Margin="10,10,0,0" VerticalAlignment="Top" Width="1200" Foreground="Black" Background="White">
            <TabItem Header="Search Stock"  Height="65" Width="200" Margin="150,0,-150,-0.2" Foreground="Black" Background="White" FontSize="20">
                <local:SearchStockUserControl Margin="10,0,10.4,12.6" FontSize="12" />
            </TabItem>
            <TabItem Header="Watch List" Height="65" Width="200" Margin="150,0,-150,-0.2" Foreground="Black" Background="White" FontSize="20">
                <local:WatchListUserControl Margin="10,0,10.4,12.6" FontSize="12" />
            </TabItem>
            <TabItem Header="TabItem" Height="65" Width="200" Margin="150,0,-150,-0.2" Foreground="Black" Background="White"/>
        </TabControl>
    </Grid>

</Window>
